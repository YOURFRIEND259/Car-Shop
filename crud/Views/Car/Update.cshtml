@model crud.Models.Car

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*        <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Car</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        OWNER
                    </div>
                    <div class="col-2">
                        <label asp-for="Mark"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Color"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Price"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        TEXT
                    </div>
                    <div class="col-2">
                        <input asp-for="Mark" class="form-control" />
                        <span asp-validation-for="Mark" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <p></p>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }